<div style='background: linear-gradient(to right, #3a4c5b, #0066aa ); color: white; width: 100%;'>
  <h2 style='margin-left: 25px; font-weight:100;'>Новый заказ</h2>
</div>
<div class="row-fluid">

  <div class="span4 route">
  <br>
    <%= render 'places/new_place', :place => Place.new, :order => @order %>
  </div>

  <div class="span2"></div>

  <div class="span6">
    <br>

<div class="well">
    <h3>Ваш маршрут</h3>

      <table class="table table-striped table-bordered">
        <tr>
          <td><strong>Откуда</strong></td>
          <td>Арема 73 2 подъезд</td>
        </tr>
        <tr>
          <td rowspan='2'><strong>Через</strong></td>
          <td>Шевченко 40 1 подъезд</td>
        </tr>
        <tr>
          <td>Шевченко 40 1 подъезд</td>
        </tr>
        <tr>
          <td><strong>Куда</strong></td>
          <td>Ильича 12 1 подъезд</td>
        </tr>
      </table>
      </div>

    <%= form_for(@order, :html => {:class => "form-horizontal"}) do |f| %>
      <% if user_signed_in? %>
        <%= f.hidden_field :user_id, value: current_user.id %>
      <% end %>


      <div class="control-group">
        <%= f.label :comment, class: "control-label order" %>
        <div class="controls">
          <%= f.text_area :comment, class: 'order_comment', placeholder: "Здесь Вы можете уточнить месторасположение точки отправления"  %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :user_phone, class: "control-label order" %>
        <div class="controls input-prepend phone">
          <span class="add-on">+38</span>
          <%= f.text_field :user_phone, class: 'span8' %>
        </div>
        <%= f.submit 'Заказать', class:'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
