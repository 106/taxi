<h4><%= @order.state %></h4>
  <strong>Taxi:</strong>
  <%= @order.taxi_id %>
  <strong>User:</strong>
  <%= @order.user_id %>
  <strong>Cost:</strong>
  <%= @order.cost %>
  <strong>Distance:</strong>
  <%= @order.distance %>
  <strong>Driver:</strong>
  <%= @order.driver_id %>
  <strong>User phone:</strong>
  <%= @order.user_phone %>

<%= link_to 'Back', root_path %>

<%= image_tag @route %>

<table>
  <tr>
    <th></th>
    <th></th>
  </tr>
  <% @order.places.each_with_index do |place, index| %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= "#{place.city},  #{place.street}, #{place.house}"%></td>
    </tr>
  <% end %>
</table>

<hr>
<% if @order.calculated? %>
<table>
<tr>
  <th>
    Taxi
  </th>
  <th>
    Cost
  </th>
  <th>    
  </th>
</tr>
<% @taxis.each do |taxi| %>
<tr>
<td>
<%= taxi.name %>  
</td>
<td>
  <%= taxi.cost_for_distance(@order.distance).round 2 %>
</td>
<td>
  <%= form_for @order do |f| %>
    <%= f.hidden_field :taxi_id, :value => taxi.id %>
    <%= f.hidden_field :cost, :value => taxi.cost_for_distance(@order.distance).round(2) %>
    <%= f.submit 'OK' %>
  <% end %>
</td>
</tr>
<% end %>
</table>

<%  end %>

