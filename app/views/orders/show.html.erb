
<div style='background: linear-gradient(to right, #3a4c5b, #0066aa ); color: white; width: 100%;'>
  <h2 style='margin-left: 25px; font-weight:100;'>Ваш маршрут: <span style='color: #b84762; font-weight: 100;'><%= @order.distance %></span> км</h2>
  </div>
<div class="row-fluid">
<div class="span7">
  <%= image_tag @route, class: "img-polaroid" %>
  <div style='background: linear-gradient(to right, #3a4c5b, #0066aa ); color: white; width: 100%; margin-right: 0'>
    <h2 style='margin-left: 25px; font-weight:100;'>Выберите службу такси:</h2>
  </div>
  <div class="well">
    <br>
  <table class='table'>
    <% @taxis.each do |taxi| %>
      <tr>
        <td>
          <%= taxi.name %>
        </td>
        <td>
          <%= "+38#{taxi.phone}"%>
        </td>
        <td>
            <%= taxi.cost_for_distance(@order.distance).round 2 %> грн.
        </td>
        <td>
          <%= form_for @order do |f| %>
            <%= f.hidden_field :taxi_id, :value => taxi.id %>
            <%= f.hidden_field :cost, :value => taxi.cost_for_distance(@order.distance).round(2) %>
            <%= f.submit 'Заказать', class: 'btn' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  </div>
</div>

<div class="span1"></div>

<div class="span4">
  <div class="well">
    <h3>Заказ</h3>
<table class='table table-striped table-bordered'>
  <tr>
    <td colspan='2'>
      Тел. <b><%= "+38#{@order.user_phone}"%></b>
    </td>
  </tr>
  <% @order.places.each_with_index do |place, index| %>
    <tr>
      <td ><%= ('A'..'Z').to_a[index] %></td>
      <td><%= "#{place.city},  #{place.street}, #{place.house}"%></td>
    </tr>
  <% end %>
  <td colspan='2'>
      <%= @order.comment %>
    </td>
</table>
<%= link_to 'Изменить', edit_order_path(@order), class:'btn pull-right'%>
<br>
</div>
</div>


</div>
