<h1>Listing places</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Street</th>
      <th>House</th>
      <th>Order</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.city %></td>
        <td><%= place.street %></td>
        <td><%= place.house %></td>
        <td><%= place.order_id %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

