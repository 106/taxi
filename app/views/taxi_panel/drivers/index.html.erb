<div class="row-fluid">
  <div class="span5 offset3">
    <h1>Водители</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Позывной</th>
      <th>Автомобиль</th>
      <th>Гос. номер</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
      <tr>
        <td><%= driver.number %></td>
        <td><%= driver.car %></td>
        <td><%= driver.car_naumber %></td>
        <td><%= link_to 'Редактировать', edit_driver_path(driver), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Удалить', driver, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить водителя', new_driver_path, class: 'btn btn-primary' %>


  </div>
</div>
