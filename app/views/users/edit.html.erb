<%= form_for @user do |f| %>
  <%= f.label :city %>
  <%= f.select :city, (City.all.map {|c| c.name}) %>
  <%= f.label :phone %>
  <%= f.phone_field :phone %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.submit %>
<% end %>
<%= link_to 'Edit email and password', edit_user_registration_path %>